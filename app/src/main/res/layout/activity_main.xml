<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/green"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/butAc"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClear"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butPlusMinus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butPercent"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butPercentEvent"
                android:text="%"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butDiv"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/green"
                android:onClick="butOpEvent"
                android:text="/"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:backgroundTint="@color/green" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="7"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="8"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butMult"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butOpEvent"
                android:text="x"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:backgroundTint="@color/green" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="4"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="5"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but6"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="6"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butMinus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butOpEvent"
                android:text="-"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:backgroundTint="@color/green" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="1"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/green"
                android:onClick="butClickEvent"
                android:text="2"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/but3"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:onClick="butClickEvent"
                android:text="3"
                android:textSize="24sp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/butAdd"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/green"
                android:onClick="butOpEvent"
                android:text="+"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                app:backgroundTint="@color/green" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button

            android:id="@+id/but0"
            android:layout_width="75pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:onClick="butClickEvent"
            android:text="0"
            android:textSize="24sp"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/butDot"
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:onClick="butClickEvent"
            android:text="."
            android:textSize="24sp"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/butEqual"
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:onClick="butEqualEvent"
            android:text="="
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"
            app:backgroundTint="@color/green" />
    </LinearLayout>

</LinearLayout>

